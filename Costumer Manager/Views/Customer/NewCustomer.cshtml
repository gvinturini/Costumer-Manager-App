@{
}
@model CustomerViewModel
<section>
    <h3>Here you can create a new customer.</h3>

    <form method="post" action="customer/NewCustomer" enctype="application/x-www-form-urlencoded">
        <div>
            <div>
                <label>Full Name *</label>
            </div>
            <input type="text" name="Name" required maxlength="50" />
        </div>
        <div>
            <div>
                <label>Email *</label>
            </div>
            <input type="email" name="Email" required maxlength="100" />
        </div>
        <div>
            <div>
                <label>Address *</label>
            </div>
            <input type="text" name="Address" maxlength="100" />
        </div>
        <div>
            <div>
                <label>Job Title *</label>
            </div>
            <input type="text" name="JobTitle" maxlength="50" />
        </div>
        <div>
            <div>
                <label>Phone Number *</label>
            </div>
            <input type="text" name="Phone" maxlength="30" />
        </div>
        <div>
            <div>
                <label>Password *</label>
            </div>
            <input type="password" name="Password" required maxlength="20" />
        </div>
        <div>
            <div>
                <label>Is Active *</label>
            </div>
            <select name="IsActive">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <div>
            <div>
                <label>Is Admin *</label>
            </div>
            <select name="IsAdmin">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <div>
            <div>
                <label>Birthday *</label>
            </div>
            <input type="datetime" name="Birthday" />
        </div>
        <div>
            <input type="submit" value="Add" />
        </div>
    </form>
</section>