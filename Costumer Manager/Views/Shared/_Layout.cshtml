<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Costumer Manager</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="hdr-top">
            <div class="flex">
                <a class="me-10 logo" asp-area="" asp-controller="Home" asp-action="Index">Giovanni</a>
                
                <div class="flex">
                    <div class="me-10">
                        <a class="" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </div>
                        
                    <div class="me-10">
                        <a class="" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="">
            &copy; 2024 - Costumer_Manager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
